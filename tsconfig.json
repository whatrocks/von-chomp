{
    "compilerOptions": {
        "module": "es2015",
        "target": "es2015",
        "jsx": "react",
        "outDir": "build",
        "rootDir": "src",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "allowJs": true,
        "sourceMap": false
    },
    "exclude": [
      "index.android.js",
      "index.ios.js",
      "build",
      "node_modules",
      "__tests__"
    ],
    "compileOnSave": false
}
